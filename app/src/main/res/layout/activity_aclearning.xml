<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/activity_accontrol"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="50dp"
tools:context="com.thejan.smarthome.ACLearningActivity">


<Button
    android:id="@+id/button_ac_on_off"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="26dp"
    android:width="200dp"
    android:height="75dp"
    android:text="ON / OFF"
    android:textSize="18sp" />

<Button
    android:id="@+id/button_ac_temp_up"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="22dp"
    android:width="200dp"
    android:height="75dp"
    android:text="TEMP UP"
    android:textSize="18sp"
    android:layout_below="@+id/button_ac_on_off"
    android:layout_alignLeft="@+id/button_ac_on_off"
    android:layout_alignStart="@+id/button_ac_on_off" />

    <Button
        android:id="@+id/button_ac_temp_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:width="200dp"
        android:height="75dp"
        android:text="TEMP DOWN"
        android:textSize="18sp"
        android:layout_below="@+id/button_ac_temp_up"
        android:layout_alignLeft="@+id/button_ac_temp_up"
        android:layout_alignStart="@+id/button_ac_temp_up" />

</RelativeLayout>

