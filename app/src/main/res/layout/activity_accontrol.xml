<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_accontrol"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.thejan.smarthome.ACControlActivity">

    <TextView
        android:text="AC ON / AC OFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp"
        android:id="@+id/textView2"
        android:textSize="18sp"
        android:textColor="@android:color/holo_green_dark" />

    <Button
        android:text="ON"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="42dp"
        android:id="@+id/button_ac_on"
        android:layout_alignRight="@+id/button_ac_off"
        android:layout_alignEnd="@+id/button_ac_off" />

    <Button
        android:text="OFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_ac_on"
        android:layout_marginTop="26dp"
        android:id="@+id/button_ac_off"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2" />

    <Button
        android:text="TEMP UP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:id="@+id/button_ac_temp_up"
        android:layout_below="@+id/button_ac_off"
        android:layout_alignLeft="@+id/button_ac_off"
        android:layout_alignStart="@+id/button_ac_off"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2" />

    <Button
        android:text="TEMP DOWN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/button_ac_temp_down"
        android:layout_below="@+id/button_ac_temp_up"
        android:layout_alignLeft="@+id/button_ac_temp_up"
        android:layout_alignStart="@+id/button_ac_temp_up"
        android:layout_alignRight="@+id/button_ac_temp_up"
        android:layout_alignEnd="@+id/button_ac_temp_up" />
</RelativeLayout>
