<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_accontrol"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.thejan.smarthome.ACControlActivity">

    <TextView
        android:id="@+id/textView_acStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:text="A/C OFF"
        android:textColor="@android:color/holo_red_light"
        android:textSize="36sp" />

    <Button
        android:id="@+id/button_ac_temp_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/toggleButton"
        android:layout_alignStart="@+id/toggleButton"
        android:layout_below="@+id/toggleButton"
        android:layout_marginTop="26dp"
        android:width="200dp"
        android:height="75dp"
        android:text="TEMP UP"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button_ac_temp_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:width="200dp"
        android:height="75dp"
        android:text="TEMP DOWN"
        android:textSize="18sp"
        android:layout_below="@+id/button_ac_temp_up"
        android:layout_alignLeft="@+id/button_ac_temp_up"
        android:layout_alignStart="@+id/button_ac_temp_up" />

    <ToggleButton
        android:id="@+id/toggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_acStatus"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:width="200dp"
        android:height="100dp"
        android:text="ToggleButton"
        android:textOff="OFF"
        android:textOn="ON"
        android:textSize="24sp" />
</RelativeLayout>
